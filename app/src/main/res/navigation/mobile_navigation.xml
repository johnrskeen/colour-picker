<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_camera">

    <fragment
        android:id="@+id/navigation_saved_colours"
        android:name="com.skeensystems.colorpicker.ui.saved.SavedColoursFragment"
        android:label="@string/title_saved_colours"
        tools:layout="@layout/fragment_saved_colours" />

    <fragment
        android:id="@+id/navigation_camera"
        android:name="com.skeensystems.colorpicker.ui.camera.CameraFragment"
        android:label="@string/title_camera"
        tools:layout="@layout/fragment_camera" />

    <fragment
        android:id="@+id/navigation_manual_picker"
        android:name="com.skeensystems.colorpicker.ui.picker.ManualPickerFragment"
        android:label="@string/title_manual_picker"
        tools:layout="@layout/fragment_manual_picker" />
</navigation>