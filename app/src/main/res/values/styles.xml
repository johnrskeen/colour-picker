<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DefaultButtonStyleHorizontal" parent="@style/Widget.Material3.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/abc_text_size_small_material</item>
        <item name="android:clickable">false</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:textColor">?defaultTextColour</item>
        <item name="android:backgroundTint">?mainColour</item>
    </style>

    <style name="DefaultButtonStyleVertical" parent="Widget.Material3.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/abc_text_size_small_material</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:textColor">?defaultTextColour</item>
        <item name="android:backgroundTint">?mainColourAccent</item>
    </style>

    <style name="DefaultEditTextStyle" parent="@style/Widget.AppCompat.EditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:textSize">@dimen/abc_text_size_medium_material</item>
        <item name="android:textColor">?defaultTextColour</item>
    </style>

    <style name="DefaultEditTextStyle.Number" parent="@style/DefaultEditTextStyle">
        <item name="android:inputType">number</item>
    </style>

    <style name="TabTextSize" parent="Widget.Material3.TabLayout">
        <item name="android:textSize">@dimen/abc_text_size_medium_material</item>
    </style>

    <style name="TabLayoutScrollbarStyle" parent="Widget.Design.TabLayout">
        <item name="android:scrollbarThumbVertical">@drawable/scrollbar</item>
    </style>

    <style name="TextInputLayout">
        <item name="colorOnSurface">?defaultTextColour</item>
        <item name="colorPrimary">?defaultTextColour</item>
    </style>

    <style name="FloatingActionButton" parent="@style/Widget.Material3.FloatingActionButton.Primary">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:backgroundTint">?mainColour</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="ActionButtons" parent="@style/Widget.Material3.Button.UnelevatedButton">
        <item name="android:padding">5dp</item>
        <item name="android:backgroundTint">#00000000</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="SavedColourBottomActionButtonsPortrait" parent="ActionButtons">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="SavedColourBottomActionButtonsLandscape" parent="ActionButtons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="SelectColourActionButtons" parent="ActionButtons">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="InspectColourCategoryTitle" parent="@style/Widget.Material3.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">#00000000</item>
        <item name="android:gravity">center_vertical | left</item>
    </style>
    <style name="InspectColourCategoryTitle.Medium" parent="@style/InspectColourCategoryTitle">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingStart">30dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textSize">@dimen/abc_text_size_medium_material</item>
    </style>
    <style name="InspectColourCategoryTitle.Small" parent="@style/InspectColourCategoryTitle">
        <item name="android:padding">0dp</item>
        <item name="android:textSize">@dimen/abc_text_size_small_material</item>
    </style>

    <style name="InspectColourCategoryDetails" parent="@style/Widget.Material3.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">#00000000</item>
        <item name="android:gravity">center_vertical | right</item>
    </style>
    <style name="InspectColourCategoryDetails.Medium" parent="@style/InspectColourCategoryDetails">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">30dp</item>
        <item name="android:textSize">@dimen/abc_text_size_medium_material</item>
    </style>
    <style name="InspectColourCategoryDetails.Small" parent="@style/InspectColourCategoryDetails">
        <item name="android:padding">0dp</item>
        <item name="android:textSize">@dimen/abc_text_size_small_material</item>
    </style>


    <style name="SimilarColoursStyleDropDown" parent="@style/Widget.Material3.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:background">@drawable/similar_colours_background</item>
    </style>


    <style name="SimilarColoursStyleButton" parent="@style/Widget.Material3.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">20dp</item>
        <item name="android:textSize">@dimen/abc_text_size_medium_material</item>
        <item name="backgroundTint">#00000000</item>
    </style>
</resources>